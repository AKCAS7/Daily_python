#List comprehension
#new_list = [new_item for item in list]

numbers = [1,2,3]
new_list = [ n+3 for n in numbers]

print( new_list )

name = "Brock"
new_name = [letter for letter in name]
print(new_name)

new_num = [ n*2 for n in range(1,5) ]
print(new_num)

names = ["Alex", "Beth", "David", "Johnny", "Freddie" , "Nate" ]
long_names = [ name.upper() for name in names if len(name) >  4 ]
short_names = [ name.lower() for name in names if len(name) <= 4 ]
print(long_names)
print(short_names)




